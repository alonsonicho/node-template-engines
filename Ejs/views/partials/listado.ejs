<h2 style="color:crimson;">Listado</h2>

<% if(DB_PRODUCTOS.length > 0){ %> 
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>URL</th> </tr>
            <!-- filas -->
            <% for (const product of DB_PRODUCTOS) {%> 
            <tr> 
                <td><%=product.nombre %> </td>
                <td><%=product.precio %> </td>
                <td><%=product.foto %> </td>
            </tr>
            <% } %> 
            <!-- Fin filas -->
        </table>
    </div>
<% } else { %> 
    <h3 class="alert alert-danger">No se encontraron dato</h3>
<% } %> 
